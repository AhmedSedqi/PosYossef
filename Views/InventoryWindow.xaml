<Window x:Class="PosYossef.Views.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion de Stock" 
        Height="800" Width="1400"
        WindowStartupLocation="Manual"
        FontFamily="Segoe UI"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    
    


    <Grid>
        <!-- الشريط الجانبي الثابت -->
        <Border Width="80" Background="#420119" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top" Margin="0,25,0,0">
                <!-- نفس أزرار التنقل كما في MainWindow -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="المخزون">
                    <Image Source="/Resources/Icons/inventory.png" Width="35" Height="35"/>
                </Button>
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="القيام بعملية بيع جديدة" Click="POSButton_Click">
                    <Image Source="/Resources/Icons/pos.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر الفواتير -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="فواتير البيع">
                    <Image Source="/Resources/Icons/invoices.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر الديون -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="ديون الزبائن والموردين">
                    <Image Source="/Resources/Icons/debts.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر العملاء -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="معلومات الزبائن والموردين">
                    <Image Source="/Resources/Icons/customers.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر التقارير -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="تقارير البيع والشراء">
                    <Image Source="/Resources/Icons/reports.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر الزكاة -->
                <Button Style="{StaticResource NavButtonStyle}" ToolTip="حساب مقدار الزكاة">
                    <Image Source="/Resources/Icons/zakat.png" Width="35" Height="35" Margin="0,25,0,0"/>
                </Button>

                <!-- زر الخروج -->
                <Button Style="{StaticResource NavButtonStyle}" Margin="0,170,0,0" ToolTip="الخروج">
                    <Image Source="/Resources/Icons/exit.png" Width="35" Height="35"/>
                </Button>
                
            </StackPanel>
        </Border>

        <!-- المنطقة الرئيسية -->
        <Grid Margin="80,0,0,0" Background="#f5f5f5">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- شريط الفئات العلوي -->
                <RowDefinition Height="640"/>
                <!-- منطقة المنتجات -->
                <RowDefinition Height="*"/>
                <!-- منطقة الأزرار السفلية -->
            </Grid.RowDefinitions>

            <!-- شريط الفئات العلوي (#ffd04d) -->
            <Border Grid.Row="0" Background="#ffd04d">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal">
                            <!-- ستحتوي على فئات المنتجات لاحقاً -->
                        </StackPanel>
                    </ScrollViewer>

                    <Button Style="{DynamicResource AddCategoryButtonStyle}" ToolTip="إضافة فئة جديدة"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,25,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/plus.png" Width="35" Height="35"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- إطار المنتجات (570 بكسل) -->
            <Border Grid.Row="1" Margin="5" BorderBrush="Gray" BorderThickness="1" Background="#f9f5e3">
                <!-- سيتم عرض بطاقات المنتجات هنا لاحقاً -->
                <TextBlock Text="Zone des Produits" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- منطقة الأزرار السفلية -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <!-- زر الإضافة -->
                <Button Style="{StaticResource ActionButtonStyle}" ToolTip="إضافة منتج">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/add.png" Width="25" Height="25"/>
                        <TextBlock Text="إضافة" FontWeight="Bold" FontFamily="Calibri" FontSize="18" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- زر التعديل -->
                <Button Style="{StaticResource ActionButtonStyle}" ToolTip="تعديل منتج" Margin="40,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/edit.png" Width="25" Height="25"/>
                        <TextBlock Text="تعديل" FontWeight="Bold" FontFamily="Calibri" FontSize="18" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- زر الحذف -->
                <Button Style="{StaticResource ActionButtonStyle}" ToolTip="حذف منتج" Margin="40,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/delete.png" Width="25" Height="25"/>
                        <TextBlock Text="حذف" FontWeight="Bold" FontFamily="Calibri" FontSize="18" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- مربع البحث -->
                <Border Margin="500,0,0,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/search.png" Width="25" Height="25"/>
                        <TextBox x:Name="SearchTextBox" 
                 BorderThickness="0" 
                 Width="200" 
                 Text="... بحث" 
                 HorizontalContentAlignment="Right"
                 FontFamily="Calibri" 
                 FontSize="18" Foreground="Gray"
                 Margin="10,0,0,0"
                 GotFocus="SearchTextBox_GotFocus"
                 LostFocus="SearchTextBox_LostFocus"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>

    <Window.Resources>
        

        <!-- ستايل زر إضافة الفئة -->
        <Style x:Key="AddCategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
</Window>
